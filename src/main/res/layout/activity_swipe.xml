<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SwipeActivity">


    <TextView
        android:id="@+id/texttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="600dp"
        android:text="Please enter the phone you loves"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="524dp"
        android:hint="Name"
        android:layout_below="@id/texttitle"
        android:inputType="textPersonName"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="449dp"
        android:layout_below="@id/name"
        android:hint="Phone"
        android:inputType="textCapWords"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btnInsert"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="341dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="331dp"
        android:text="Insert New Data"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnInsert"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="404dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="263dp"
        android:text="Update New Data"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="309dp"
        android:layout_height="69dp"
        android:layout_below="@id/btnUpdate"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="471dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="191dp"
        android:text="Delete Existing Data"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnView"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="548dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="121dp"
        android:text="View Data"
        android:textSize="20dp"
        android:layout_below="@id/btnDelete"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="634dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="59dp"
        android:text="if Phone matches left swipe for chat "
        android:textColor="#2EB62c"
        android:textSize="19dp" />

</RelativeLayout>